# Environment Variables Template for Docker Deployment
# Copy this to your Render environment variables

# Django Core Settings (REQUIRED)
SECRET_KEY=<generate-new-secret-key>
DEBUG=False
ALLOWED_HOSTS=nexapdf-backend.onrender.com,localhost,127.0.0.1

# Database (REQUIRED - provided by Render PostgreSQL)
DATABASE_URL=<provided-by-render-postgresql>

# CORS Configuration (REQUIRED)
CORS_ALLOWED_ORIGINS=https://neel2003gar.github.io,http://localhost:3000
CORS_ALLOW_ALL=False

# Application Settings
DAILY_OPERATION_LIMIT=10
TEMP_FILE_CLEANUP_MINUTES=30

# Logging (OPTIONAL)
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO  
APP_LOG_LEVEL=DEBUG

# Security Settings (OPTIONAL)
SECURE_SSL_REDIRECT=True

# Email Configuration (OPTIONAL - only if you need email features)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=<your-email>
EMAIL_HOST_PASSWORD=<your-app-password>
DEFAULT_FROM_EMAIL=noreply@nexapdf.com
SUPPORT_EMAIL=neel2003gar@gmail.com

# Superuser Creation (OPTIONAL - for admin access)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@nexapdf.com
DJANGO_SUPERUSER_PASSWORD=<secure-admin-password>