# Django settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=nexapdf-backend.onrender.com,localhost,127.0.0.1

# Database Configuration
# Production (Render): PostgreSQL URL will be provided by Render
# DATABASE_URL=postgresql://user:password@host:port/dbname
# Development: SQLite (default if no DATABASE_URL provided)

# Email settings (for password reset)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# File upload limits
FILE_UPLOAD_MAX_MEMORY_SIZE=52428800
DATA_UPLOAD_MAX_MEMORY_SIZE=52428800

# Rate limiting
DAILY_OPERATION_LIMIT=10
TEMP_FILE_CLEANUP_MINUTES=30

# CORS settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000